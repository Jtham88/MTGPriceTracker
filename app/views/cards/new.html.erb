<div>
  Add a new card?
  <%= form_for @card, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
    <div>
      <%= label_tag(:name, "Card name:") %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= label_tag(:set, "Card set:") %>
      <%= f.text_field :set %>
    </div>
    <div>
      <%= label_tag(:description, "Card description:") %>
      <%= f.text_area :description, size: "60x12" %>
    </div>
    <div>
      <%= label_tag(:amount_cents, "Card price:") %>
      <%= f.text_field :amount_cents %>
    </div>
  <%= f.submit "Create" %>
<% end %>
</div>
<div><%= link_to "Go back", cards_path %></div>